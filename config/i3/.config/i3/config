# Dual Monitor
set $monitor1 DVI-D-0
set $monitor2 DP-0
exec --no-startup-id monitor.sh $monitor1 $monitor2 --auto
bindsym $mod+Shift+b exec monitor.sh $monitor1 $monitor2 --left
bindsym $mod+Shift+n exec monitor.sh $monitor1 $monitor2 --right
bindsym $mod+Shift+m exec monitor.sh $monitor1 $monitor2 --auto

